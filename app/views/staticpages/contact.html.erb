
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .contact-form {
      background: #fff;
      margin-top: 5%;
      margin-bottom: 5%;
      width: 70%;
      border-radius: 10px;
      padding: 20px;
    }
  </style>
<%=render 'shared/menu_bar'%>
<div class="container contact-form">
  <h3 class="text-center">Contact Us</h3>
  <div class="contact-image text-center">
  </div>
  <p class="text-center">Drop Us a Message</p>
  <%= form_with url: '/contact', local: true do |form| %>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= form.text_field :name, placeholder: 'Your Name *', class: 'form-control', required: true %>
        </div>
        <div class="form-group">
          <%= form.email_field :email, placeholder: 'Your Email *', class: 'form-control', required: true %>
        </div>
        <div class="form-group">
          <%= form.telephone_field :phone, placeholder: 'Your Phone Number *', class: 'form-control', required: true %>
        </div>
        <div class="form-group">
          <%= form.submit 'Send Message', class: 'btn btn-primary btn-block' %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= form.text_area :message, placeholder: 'Your Message *', class: 'form-control', style: 'height: 150px;', required: true %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<!-- Bootstrap JS and dependencies -->
<%= javascript_include_tag 'https://code.jquery.com/jquery-3.5.1.slim.min.js' %>
<%= javascript_include_tag 'https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js' %>
<%= javascript_include_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js' %>
<!-- Bootstrap JS and dependencies -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
